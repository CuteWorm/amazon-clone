<% layout('layout') %>
<div class="row">

    <div class="col-lg-6 col-md-offset-3">

        <% if (message.length) { %>
            <div class="alert alert-success alert-dismissible">
                <button type="button" name="button" class="close" data-dismiss='alert' aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <%= message %>
            </div>
        <% } %>
        <form class="" method="post">
            <h1>Edit Profile</h1>
            <div class="form-group">
                <label for="">Name:</label>
                <input type="text" name="name" class="form-control" value="<%= user.profile.name %>">
            </div>
            <div class="form-group">
                <label for="">Address:</label>
                <input type="text" name="address" class="form-control" value="<%= user.address %>">
            </div>
            <button type="submit" name="button" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
