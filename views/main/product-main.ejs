<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center"> Shop Smart, Save Big!</h1>
    <p class="text-center">Find your favourite Product</p>
    <div class="row">
      <form action="/api/search" method="post">
        <div class="col-md-6 col-md-offset-3">
          <div class="input-group col-md-12">

            <input id="search" type="text" class="form-control input-lg" name="search_term" value="" placeholder="Search for a Product...">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-primary btn-lg" name="button"><i class="glyphicon glyphicon-search"></i></button>
            </span>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container">
  <div class="row" id="searchResults">
    <% for (var i = 0; i< products.length; i++) { %>
      <div class="col-md-4">
        <a href="/product/<%= products[i]._id %>">
          <div class="thumbnail">
            <img src="<%= products[i].image %>"/>
            <div class="caption">
              <h3><%= products[i].name %></h3>
              <p><%= products[i].category.name %></p>
              <p><%= products[i].price %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>

  <ul class="pagination text-center">

      <% for (var i = 1; i <= pages; i++) { %>
        <% if (i === 1) { %>
          <li><a href="/"><%= i %></a></li>
          <% } else { %>
            <li><a href="/page/<%= i %>"><%= i %></a></li>
        <% } %>
      <% } %>

  </ul>
</div>
